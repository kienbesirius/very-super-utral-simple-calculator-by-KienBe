<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <TextView
        android:id="@id/textView_Result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@color/black"
        android:gravity="bottom|end"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:background="#E6000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:weightSum="5">
        <TableRow
            android:layout_weight="1"
            android:weightSum="4">
            <ImageButton

                android:id="@id/button_clear"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_clear"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_mark"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_mark"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_percent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_percent"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_divide"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_divide"
                android:contentDescription="@string/error_01" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:weightSum="4">
            <ImageButton
                android:id="@id/button_7"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_7"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_8"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_8"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_9"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_9"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_multiple"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_multiple"
                android:contentDescription="@string/error_01" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:weightSum="4">
            <ImageButton
                android:id="@id/button_4"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_4"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_5"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_5"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_6"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_6"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_minus"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_minus"
                android:contentDescription="@string/error_01" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:weightSum="4">
            <ImageButton
                android:id="@id/button_1"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_1"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_2"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_2"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_3"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_3"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_plus"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_plus"
                android:contentDescription="@string/error_01" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:weightSum="4">
            <ImageButton
                android:id="@id/button_0"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_0"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_decimal"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_decimal"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_delete"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_delete"
                android:contentDescription="@string/error_01" />
            <ImageButton
                android:id="@id/button_result"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:backgroundTint="#00EFEFEF"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/button_result"
                android:contentDescription="@string/error_01" />
        </TableRow>
    </TableLayout>

</LinearLayout>